<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}ISAM - Isabelle Marandon{% endblock %}</title>
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/styles.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
  <body>
    {% if app.request.attributes.get('_route') != 'homepage' %}
      <div class="preloader">
        <div class="loader"></div>
      </div>
    {% endif %}
    {{ include('AppBundle:Partials:header.html.twig') }}
    <div class="content">
      {% block body %}{% endblock %}
    </div>
    {{ include('AppBundle:Partials:footer.html.twig') }}
    {% block javascripts %}
      <script type="text/javascript" src="{{ asset('js/app.min.js')}}"></script>
      <script>
        new App();
      </script>
    {% endblock %}
  </body>
</html>
