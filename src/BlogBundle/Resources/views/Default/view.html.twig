{% extends 'base.html.twig' %}

{% block body %}
  <div class="article">
    <div class="row">
      <div class="title"><span>{{article.title}}</span></div>
      <div class="img"><img src="{{ asset('/upload/blog/' ~ article.image) }}"></div>
      <div class="desc">{{ article.description }}</div>
    </div>
    <div class="row gallery">
      {% for photo in images %}
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <a class="thumbnail">
            <img src="{{ asset('/upload/blog/' ~ photo) }}">
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}