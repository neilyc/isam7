{% extends 'base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/lib/swiper.min.css') }}">
{% endblock %}

{% block body %}
  <div class="blog">
    <div class="row">
      <div class="title"><span>{{article.title}}</span></div>
      <div class="image"><img src="{{ asset('/upload/blog/' ~ article.image) }}"></div>
      <div class="desc">{{ article.description }}</div>
      <div class="images clearfix">
        {% if images|length > 4 %}
          <div class="swiper-container">
            <div class="swiper-wrapper">
              {% for photo in images %}
                <div class="swiper-slide">
                  <img src="{{ asset('/upload/blog/' ~ photo) }}" class="img">
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="swiper-pagination"></div>  
        {% else %}
          {% for photo in images %}
            <div class="col-xs-12 col-sm-6 col-md-3 photo {% if loop.index == 1 %}first{% endif %}">
              <img src="{{ asset('/upload/blog/' ~ photo) }}" class="img">
            </div>
          {% endfor %}  
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}