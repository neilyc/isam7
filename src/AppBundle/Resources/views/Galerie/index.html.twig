{% extends 'AppBundle::base.html.twig' %}

{% block body %}
  <section class="gallery">
    <ul>
      {% for item in series %}
        {% set filename =  "/upload/paintings/" ~ item.paintings[random(item.paintings|length - 1)].filename  %}
        <li class="col-xs-12 col-md-4 col-lg-3">
          <a class="serie" href="{{ path('galerie_view', {'id': item.id}) }}">
            <div class="background-cover" style='background: url({{filename}}) center center no-repeat; -moz-background-size: cover; -webkit-background-size: cover; background-size: cover;'> 
            </div>
            <div class="overlay">
              <div class="overlay_inner">
                <div class="text">{{item.name}}</div>
                <div class="link">Voir la s√©rie</div>
              </div>
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endblock %}