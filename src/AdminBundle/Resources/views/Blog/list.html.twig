{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
  <b>ARTICLES</b>
  <a href="{{ path('admin_blog_new') }}" class="btn btn-info right">Ajouter</a>
{% if blogs %}
  <table>
    <tr>
      <th>Titre</th>
      <th>Image</th>
      <th>Actions</th>  
    </tr>          
    {% for blog in blogs %}
      <tr class="blog">
        <td>{{blog.title}}</td>
        <td>        
          {% if blog.image %}
            <img src="/upload/blog/{{ blog.image }}" />
          {% endif %}
        </td>
        <td>
          <a href="{{ path('admin_blog_edit',  { 'id': blog.id }) }}" class="btn btn-success edit">Modifier</a> <br>
          <a href="{{ path('admin_blog_delete',  { 'id': blog.id }) }}" class="btn btn-danger delete" onclick="return confirm('Supprimer ce blog ?');">Supprimer</a>
        </td>
      </tr>
    {% endfor %}
  </table>
{% endif %}
{% endblock %}